<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center"><i class="fas fa-sign-in-alt mr-2"></i>Login</h1>
      <form action="#" method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value=""
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            value=""
          />
        </div>
        <button type="submit" class="btn btn-info btn-block">Login</button>
      </form>
      <p class="lead mt-4">
          No Account? <a href="/users/register" style="color: #f0f;">Register</a>
      </p>
    </div>
  </div>
</div>
